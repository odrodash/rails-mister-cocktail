<div class="home-banner">
  <div>
    <p>Mr. Cocktail</p>
  </div>
</div>

<div class="big-card ">
  <h1 class="text-center">Cocktails List</h1>
  <div class="cards">
    <% @cocktails.each do |cocktail|  %>
      <div class="d-flex justify-content-center">
        <div class="card-category"  data-aos="fade-down"
                                    data-aos-easing="linear"
                                    data-aos-duration="1500">
          <div id="drink-name">
            <%= link_to cocktail.name, cocktail_path(cocktail), class: 'link-to-text-color' %>
          </div>
        </div>
        <div id="drink-delete"  data-aos="fade-down"
                                data-aos-easing="linear"
                                data-aos-duration="1500">
          <%= link_to cocktail_path(cocktail), class: 'trash' , method: :delete, data: { confirm: "Are you sure?" } do%>
              <i class="fas fa-trash-alt"></i>
          <% end %>
        </div>
        </div>
        <div></div>

    <% end %>
      <div class="d-flex justify-content-center" data-aos="fade-up-left">
        <div class="card-category-new" >
          <span id="plus"> <%= link_to '+', new_cocktail_path, class: 'link-to-text-color' %> </span>
        </div>
      </div>
  </div>



</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= "Lorem ipsum dolor sit amet, consectetur adipisicing elit " * 10 %>
    </div>
  </div>
</div>
