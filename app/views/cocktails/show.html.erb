<h1><%= @cocktail.name %></h1>

<h3>
<ul><% @cocktail.doses.each do |dose| %>
  <li><%= dose.ingredient.name %>
    <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do%>
        <i class="fas fa-trash-alt" id="trash"></i>
    <% end %>
    <h5><%= dose.description %></h5>
  </li>

  <% end %>
</ul>
</h3>

<h5><%= link_to 'back Home', cocktails_path, class: 'btn btn-danger'%> | <%= link_to 'add doses', new_cocktail_dose_path(@cocktail), class: 'btn btn-danger'  %></h5>
