<div>
  <div class="show-container">
    <div class="card" style="max-width: 800px;">
      <div class="title">
        <p class="text-secondary"><%= @cocktail.name %></p>
      </div>
      <div class="row no-gutters">
        <div class="col-lg-6" id="img-card">
          <% if @cocktail.photo.present? %>
          <%= cl_image_tag(@cocktail.photo, width: 300, height: 200, crop: :thumb) %>
          <% else %>
          <%= cl_image_tag("https://res.cloudinary.com/dmuryw7rj/image/upload/v1572064417/lmao4hugpxjt2klpjful.png", width: 300, height: 200, crop: :fill) %>
          <% end %>
        </div>
        <div class="col-lg-6">
          <div class="card-body">
            <p class="card-text">
              <ul class="list-group list-group-flush"><% @cocktail.doses.each do |dose| %>
                <li class="list-group-item"><%= dose.ingredient.name %>
                  <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do%>
                      <i class="fas fa-trash-alt" id="trash"></i>
                  <% end %>
                  <p class="text-secondary"><%= dose.description %></p>
                </li>

                <% end %>
              </ul>
            </p>
          </div>
        </div>
      </div>
    </div>
  <h5 class="mt-3"><%= link_to 'back Home', cocktails_path, class: 'btn btn-danger'%> | <%= link_to 'add doses', new_cocktail_dose_path(@cocktail), class: 'btn btn-danger'  %></h5>
  </div>
</div>
