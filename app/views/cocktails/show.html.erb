<h1><%= @cocktail.name %></h1>

<h3>
<ul><% @cocktail.doses.each do |dose| %>
  <li><%= dose.ingredient.name %> <h5><%= dose.description %></h5>
    <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do%>
        <h5><i class="fas fa-trash-alt" id="trash"></i></h5>
    <% end %>
  </li>

  <% end %>
</ul>
</h3>

<%= link_to 'back Home', cocktails_path %> | <%= link_to 'add doses', new_cocktail_dose_path(@cocktail)  %> |
